{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2021"],
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    // Generate .d.ts files
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "#core/*": ["./src/core/*"],
      "#utils/*": ["./src/utils/*"],
      "#core": ["./src/core/index.ts"],
      "#utils": ["./src/utils/index.ts"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "tests"
  ]
}