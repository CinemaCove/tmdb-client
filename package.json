{
    "name": "@cinemacove/tmdb-client",
    "version": "1.0.0",
    "description": "TypeScript client for The Movie Database (TMDB) API v3.",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "scripts": {
        "build": "tsup",
        "test": "vitest",
        "lint": "eslint . --ext .ts",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier --write .",
        "test:coverage": "vitest --coverage",
        "clean": "npm run lint:fix && npm run format"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/CinemaCove/tmdb-client.git"
    },
    "keywords": [
        "tmdb",
        "api",
        "client",
        "typescript"
    ],
    "author": "Paulo Santos",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/CinemaCove/tmdb-client/issues"
    },
    "homepage": "https://github.com/CinemaCove/tmdb-client#readme",
    "dependencies": {
        "qs": "^6.14.1"
    },
    "peerDependencies": {
        "axios": "^1.13.2"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.3",
        "@eslint/js": "^9.39.2",
        "@types/node": "^25.0.10",
        "@types/qs": "^6.14.0",
        "@typescript-eslint/eslint-plugin": "^8.53.1",
        "@typescript-eslint/parser": "^8.53.1",
        "@vitest/coverage-v8": "^4.0.18",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-import": "^2.32.0",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-unused-imports": "^4.3.0",
        "prettier": "^3.8.1",
        "tsup": "^8.5.1",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.53.1",
        "vitest": "^4.0.18"
    }
}
